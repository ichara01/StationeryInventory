<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/item_img"
        style="@style/list_item_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_padding">

        <TextView
            android:id="@+id/txt_name"
            style="@style/list_item_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/list_item_details_label"
                android:text="@string/stationery_brand" />

            <TextView
                android:id="@+id/txt_supplier"
                style="@style/list_item_details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/list_item_details_label"
                android:text="@string/quantity" />

            <TextView
                android:id="@+id/txt_quantity"
                style="@style/list_item_details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/list_item_details_label"
                android:text="@string/price" />

            <TextView
                android:id="@+id/txt_price"
                style="@style/list_item_details" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_code"
        android:visibility="invisible"
        style="@style/list_item_details" />

    <Button
        android:id="@+id/btn_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Sale" />
</LinearLayout>