<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/FontColor</item>
    </style>

    <style name="Header" >
    <item name="android:textSize">@dimen/HeaderTextSize</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/FontColor</item>
    <item name="android:gravity">center</item>
    <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SubHeader">
    <item name="android:textSize">@dimen/SubHeaderTextSize</item>
    <item name="android:textColor">@color/FontColor</item>
    <item name="android:textStyle">bold</item>
    </style>

    <style name="Banner">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:scaleType">fitXY</item>
    <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ViewGroup">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MenuImage">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:maxWidth">@dimen/MenuMaxWidth</item>
    <item name="android:maxHeight">@dimen/MenuMaxHeight</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MenuText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">20dp</item>
    <item name="android:layout_marginTop">25dp</item>
    <item name="android:textSize">@dimen/TextSize</item>
    <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ContactIcon">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@android:color/black</item>
    <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ContactText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:textColor">@android:color/white</item>
    </style>
</resources>